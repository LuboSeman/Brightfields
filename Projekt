    // Function to update texts on the page based on selected language
    function updateTexts(lang) {
        document.documentElement.lang = lang; // Set language for the whole page
        const elementsToTranslate = document.querySelectorAll('[data-key]');
        
        elementsToTranslate.forEach(el => {
            const key = el.dataset.key;
            const translation = translations[lang][key];

            if (translation !== undefined) {
                if (el.dataset.altKey && el.tagName === 'IMG') { // Handles alt text for images
                    el.alt = translation;
                } else if (el.dataset.placeholderKey && (el.tagName === 'INPUT' || el.tagName === 'TEXTAREA')) { // Handles placeholders
                    el.placeholder = translation;
                } else if (key === 'service_expat_page_list' && Array.isArray(translation)) { // Special handling for lists
                    const listElement = el; 
                    listElement.innerHTML = ''; // Clear existing items
                    translation.forEach(itemText => {
                        const listItem = document.createElement('li');
                        listItem.textContent = itemText;
                        listElement.appendChild(listItem);
                    });
                } else if (key === 'footer_copyright') { // Special handling for copyright to keep dynamic year
                     el.innerHTML = translation.replace('<span id="current-year-placeholder"></span>', `<span id="current-year">${new Date().getFullYear()}</span>`);
                }
                else {
                    el.innerHTML = translation; // For most elements, innerHTML is fine (handles potential HTML in translations)
                }
            } else {
                console.warn(`Missing translation for key: ${key} in language: ${lang}`);
            }
        });
    }


    document.addEventListener('DOMContentLoaded', () => {
        // Set current year in footer (initial load in default language)
        const currentYearElem = document.getElementById('current-year');
        if (currentYearElem) {
            currentYearElem.textContent = new Date().getFullYear();
        }
        // Also update the main copyright string with the year for the initial language
        const initialLang = document.querySelector('.lang-switcher button.active').id.replace('lang-', '');
        updateTexts(initialLang);


        const navLinks = document.querySelectorAll('header .nav-link');
        const pageSections = document.querySelectorAll('.page-section');
        const headerOffset = parseInt(getComputedStyle(document.documentElement).scrollPaddingTop, 10) || 75;

        // Function to update active navigation link based on scroll position
        function updateActiveLink() {
            let currentSectionId = '';
            // Determine which section is currently in view
            pageSections.forEach(section => {
                const sectionTop = section.offsetTop;
                if (pageYOffset >= (sectionTop - headerOffset - 20)) { // Adjusted offset for better accuracy
                    currentSectionId = section.getAttribute('id');
                }
            });

            // Update active class on navigation links
            navLinks.forEach(link => {
                link.classList.remove('active');
                // Check if the link's data-page matches the current section or href matches
                const linkPage = link.dataset.page;
                if (linkPage && `page-${linkPage}` === currentSectionId) {
                    link.classList.add('active');
                } else if (link.getAttribute('href') === `#${currentSectionId}`) {
                     link.classList.add('active');
                }
            });
        }
        
        updateActiveLink(); // Initial call to set active link on page load
        window.addEventListener('scroll', updateActiveLink); // Update active link on scroll

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#page-"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    const elementPosition = targetElement.getBoundingClientRect().top;
                    const offsetPosition = elementPosition + window.pageYOffset - headerOffset;
                  
                    window.scrollTo({
                         top: offsetPosition,
                         behavior: "smooth"
                    });

                    // Update URL hash without jumping (optional)
                    if (history.pushState) {
                        history.pushState(null, null, targetId);
                    } else {
                        location.hash = targetId;
                    }
                    // Small delay to ensure scroll finishes before updating active link,
                    // especially for very short scrolls.
                    setTimeout(updateActiveLink, 100); 
                }
            });
        });

        // Language switcher logic
        const langButtons = document.querySelectorAll('.lang-switcher button');
        langButtons.forEach(button => {
            button.addEventListener('click', function() {
                langButtons.forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');
                const selectedLang = this.id.replace('lang-', '');
                updateTexts(selectedLang); // Call function to update page texts
            });
        });

        // Modal dialog logic
        const openModalButton = document.getElementById('open-modal-button');
        const closeModalButton = document.getElementById('close-modal-button');
        const modalOverlay = document.getElementById('contact-modal');
        const modalScrollToContactButton = document.getElementById('modal-scroll-to-contact');

        if (openModalButton && modalOverlay) {
            openModalButton.addEventListener('click', () => {
                modalOverlay.classList.add('active');
                document.body.style.overflow = 'hidden'; // Prevent background scrolling
            });
        }

        function closeModal() {
            if (modalOverlay) {
                modalOverlay.classList.remove('active');
                document.body.style.overflow = ''; // Restore background scrolling
            }
        }

        if (closeModalButton) {
            closeModalButton.addEventListener('click', closeModal);
        }
        
        if (modalOverlay) {
            // Close modal if user clicks on the overlay itself
            modalOverlay.addEventListener('click', (event) => {
                if (event.target === modalOverlay) {
                    closeModal();
                }
            });
        }

        if (modalScrollToContactButton) {
            modalScrollToContactButton.addEventListener('click', (e) => {
                // No e.preventDefault() needed if it's already a nav-link handled by smooth scroll
                closeModal(); 
                // The smooth scroll to #page-kontakt should be handled by the existing anchor logic
            });
        }

        // Contact Form submission placeholder
        const contactForm = document.getElementById('contact-form-main');
        const formStatusMessage = document.getElementById('form-status-message');

        if (contactForm && formStatusMessage) {
            contactForm.addEventListener('submit', function(event) {
                event.preventDefault(); // Prevent default form submission
                
                // Basic validation example (can be expanded)
                const nameInput = document.getElementById('contact-name');
                const emailInput = document.getElementById('contact-email');
                
                if (!nameInput.value.trim() || !emailInput.value.trim()) {
                    formStatusMessage.textContent = translations[document.documentElement.lang].form_fill_required || 'Prosím, vyplňte meno a e-mail.';
                    formStatusMessage.className = 'mt-4 text-center text-red-600';
                    return;
                }

                // Simulate form submission
                formStatusMessage.textContent = translations[document.documentElement.lang].form_sending || 'Odosielam správu...';
                formStatusMessage.className = 'mt-4 text-center text-blue-600';

                // In a real application, you would send data to a server here.
                // For this example, we'll just show a success message after a delay.
                setTimeout(() => {
                    formStatusMessage.textContent = translations[document.documentElement.lang].form_sent_success || 'Správa bola úspešne odoslaná! Čoskoro sa vám ozvem.';
                    formStatusMessage.className = 'mt-4 text-center text-green-600';
                    contactForm.reset(); // Clear the form
                }, 1500);

                // For demonstration, log form data
                const formData = new FormData(contactForm);
                console.log("Form data:");
                for (let [key, value] of formData.entries()) {
                    console.log(`${key}: ${value}`);
                }
                // console.log('Form submission attempt. Implement proper handling for server-side processing.');
            });
        }
         // Add missing translations for form status messages (if not already there)
        translations.sk.form_fill_required = "Prosím, vyplňte aspoň meno a e-mail.";
        translations.en.form_fill_required = "Please fill in at least name and e-mail.";
        translations.sk.form_sending = "Odosielam správu...";
        translations.en.form_sending = "Sending message...";
        translations.sk.form_sent_success = "Správa bola úspešne odoslaná! Čoskoro sa vám ozvem.";
        translations.en.form_sent_success = "Message sent successfully! I will get back to you soon.";


    });
</script>
